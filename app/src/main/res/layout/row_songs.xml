<?xml version="1.0" encoding="utf-8"?>

        <RelativeLayout
            android:id="@+id/relativeLayoutSongs"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_2dp"
            android:layout_marginLeft="@dimen/spacing_8dp"
            android:layout_marginStart="@dimen/spacing_8dp"
            android:layout_marginTop="@dimen/spacing_2dp"
            >


            <TextView
                android:id="@+id/textViewSongName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/textViewSongArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewSongName"/>

            <ImageView
                android:id="@+id/imageViewPlaying"
                android:src="@drawable/icon_playingsong"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toRightOf="@+id/textViewSongArtist"
                android:layout_below="@+id/textViewSongName"
                android:visibility="invisible"/>


        </RelativeLayout>

